@model SFA.DAS.ProviderRegistrations.Web.ViewModels.NewEmployerUserViewModel
@{
    ViewData["Title"] = "Manage apprenticeships";
}

@section Styles
{
    <link rel="Stylesheet" href="@Href("~/stylesheets/site.css")" />
}

<form id="InviteEmployerUser" novalidate method="post" action="@Url.Action("InviteEmployeruser")">
    @Html.AntiForgeryToken()
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                Check details
            </h1>
            <p class="govuk-body">Check the details are correct. We will be sending the invitation to complete the set-up of the account to the email address below.</p>
            <br>
            <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Employer organisation
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerOrganisation
                        @Html.HiddenFor(m => m.EmployerOrganisation)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <input class="govuk-link govuk-button--looks-like-link" type="submit" value="Change" name="command" />
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Employer first name
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerFirstName
                        @Html.HiddenFor(m => m.EmployerFirstName)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <input class="govuk-link govuk-button--looks-like-link" type="submit" value="Change" name="command" />
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Employer last name
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerLastName
                        @Html.HiddenFor(m => m.EmployerLastName)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <input class="govuk-link govuk-button--looks-like-link" type="submit" value="Change" name="command" />
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Employer email address
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.EmployerEmailAddress
                        @Html.HiddenFor(m => m.EmployerEmailAddress)
                    </dd>
                    <dd class="govuk-summary-list__actions">
                        <input class="govuk-link govuk-button--looks-like-link" type="submit" value="Change" name="command" />
                    </dd>
                </div>
            </dl>

            <button type="submit" class="govuk-button">Invite employer</button>
        </div>
    </div>
</form>