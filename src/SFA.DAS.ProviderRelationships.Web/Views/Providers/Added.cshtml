@model AddedProviderViewModel

@{
    ViewBag.Title = "Training provider added";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div aria-labelledby="success-summary-title" class="govuk-success-summary govuk-!-text-align-center" role="alert" tabindex="-1">
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-2 govuk-!-margin-top-4" id="success-summary-title">
                Training provider added
            </h1>
            <div class="govuk-success-summary__body">
                <p>You've successfully added <span class="govuk-!-font-weight-bold">@Model.AccountProvider.Provider.Name</span></p>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AccountProviderId)
            <div class="govuk-form-group @(Html.IsValid(m => m.Choice) ? "" : " govuk-form-group--error")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m govuk-!-margin-bottom-0">
                        <h1 class="govuk-fieldset__heading">
                            What's next?
                        </h1>
                    </legend>
                    <span class="govuk-error-message">
                        @Html.ValidationMessageFor(m => m.Choice)
                    </span>
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(m => m.Choice, "SetPermissions", new { id = "choice-1", @class = "govuk-radios__input" })
                            <label class="govuk-label govuk-radios__label" for="choice-1">
                                Set permissions for this training provider
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(m => m.Choice, "AddTrainingProvider", new { id = "choice-2", @class = "govuk-radios__input" })
                            <label class="govuk-label govuk-radios__label" for="choice-2">
                                Add another training provider
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(m => m.Choice, "GoToHomepage", new { id = "choice-3", @class = "govuk-radios__input" })
                            <label class="govuk-label govuk-radios__label" for="choice-3">
                                Go back to Homepage
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" type="submit">Continue</button>
        }  
    </div>
</div>