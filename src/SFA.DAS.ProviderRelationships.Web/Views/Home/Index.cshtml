@model SFA.DAS.ProviderRelationships.Web.ViewModels.Home.TrainingProviderPermissionsViewModel

@{
    ViewBag.Title = "Training provider permissions";
}

@section breadcrumb {
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a class="govuk-breadcrumbs__link" href="@Url.EmployerPortalAccountAction("teams")">Home</a>
            </li>
            <li aria-current="page" class="govuk-breadcrumbs__list-item">Training provider permissions</li>
        </ol>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Training provider permissions</h1>
        <p class="govuk-body">Set permissions for what you want training providers to do on your behalf. You can select from those you've previously worked with, or find a new one.</p>
        <a class="govuk-button govuk-button--start" href="@Url.Action("Search", "Providers")" role="button">Add a new training provider</a>
        <h2>Your training providers</h2>
        @if (!Model.AccountProviders.Any())
        {
            <p>No training provider permissions set</p>
        }
        else
        {
        }
    </div>
</div>
