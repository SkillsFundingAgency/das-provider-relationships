@using SFA.DAS.Validation.Mvc
@model SFA.DAS.ProviderRelationships.Web.ViewModels.SearchTrainingProvidersViewModel

@{
    ViewBag.Title = "Search for a training provider";
}

@section breadcrumb {
    <div>
        <ol>
            <li><a href="@Url.Action("Index", "Home")">Back</a></li>
        </ol>
    </div>
}

@Html.Partial("_ValidationSummary", ViewData.ModelState)

<h1>Search for a training provider</h1>
<p>Search for a training provider using a UKPRN.</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="@(Html.IsValid(m => m.SearchTrainingProvidersQuery.Ukprn) ? "" : "error")">
        <label for="@Html.IdFor(m => m.SearchTrainingProvidersQuery.Ukprn)">
            <span>Uk Provider Reference Number</span>
            @Html.ValidationMessageFor(m => m.SearchTrainingProvidersQuery.Ukprn)
        </label>
        @Html.TextBoxFor(m => m.SearchTrainingProvidersQuery.Ukprn)
    </div>
    <h2>What is a UK Provider Reference Number?</h2>
    <p>A UK Provider Reference Number (UKPRN) is a unique, 8-digit number that identifies a training provider. Your training provider can tell you their UKPRN.</p>
    <button type="submit">Continue</button>
}