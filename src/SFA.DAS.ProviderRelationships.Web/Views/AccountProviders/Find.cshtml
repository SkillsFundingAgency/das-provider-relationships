@model SFA.DAS.ProviderRelationships.Web.ViewModels.AccountProviders.FindProvidersViewModel

@{
    ViewBag.Title = "Search for a training provider";
    ViewBag.ZenDeskLabel = "permissions-search-for-a-training-provider";
}

@section breadcrumb
{
    <a class="govuk-back-link" href="@Url.Action("Index")">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @Html.Partial("_ValidationSummary", ViewData.ModelState)
    </div>
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-6">Enter your training provider's UK Provider Reference Number (UKPRN)</h1>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <p class="govuk-body">
            This is the unique, 8-digit number that we use to identify a training provider.
            Ask your training provider for their UKPRN if you do not know it.
        </p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="govuk-form-group @(Html.IsValid(m => m.Ukprn) ? "" : " govuk-form-group--error")">
                <label class="govuk-label js-hidden" for="Ukprn">
                    UKPRN
                </label>
                <span class="govuk-error-message">
                    @Html.ValidationMessageFor(m => m.Ukprn)
                </span>
                <select id="Ukprn" name="ProviderUkprn" class="govuk-select">
                    <option value="">Search for a provider </option>
                    @foreach (var provider in Model.Providers)
                    {
                        <option value="@provider.Ukprn">@provider.FormattedProviderSuggestion</option>
                    }
                </select>
            </div>
            <button class="govuk-button" type="submit">Continue</button>
        }
    </div>
</div>