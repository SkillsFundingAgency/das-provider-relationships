@using SFA.DAS.ProviderRelationships.Web.Controllers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.ProviderRelationships.Web.ViewModels.AccountProviders.AlreadyAddedAccountProviderViewModel

@{
    ViewBag.Title = "You've already added this training provider";
    ViewBag.GaData.Vpv = "/permissions/accountproviders/alreadyadded";
    ViewBag.GaData.Ukprn = Model.AccountProvider.ProviderUkprn.ToString();
}

@section breadcrumb
{
    <a class="govuk-back-link" asp-action="@AccountProviders.ActionNames.Find" asp-route-accountHashedId="@ViewContext.RouteData.Values[RouteValueKeys.AccountHashedId]">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            You've already added this training provider
        </h1>
        <p class="govuk-body">
            You cannot add @Model.AccountProvider.ProviderName,(@Model.AccountProvider.ProviderUkprn) because they're already on your
            list of training providers.
        </p>
        <a class="govuk-button" asp-action="@AccountProviders.ActionNames.Index" asp-controller="@AccountProviders.ControllerName" asp-route-accountHashedId="@ViewContext.RouteData.Values[RouteValueKeys.AccountHashedId]" role="button">Return to your training providers</a>
    </div>
</div> 