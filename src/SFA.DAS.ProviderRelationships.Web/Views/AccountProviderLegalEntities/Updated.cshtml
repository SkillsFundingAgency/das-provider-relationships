@model SFA.DAS.ProviderRelationships.Web.ViewModels.AccountProviderLegalEntities.UpdatedAccountProviderLegalEntityViewModel

@{
    ViewBag.Title = "Permissions updated";
    ViewBag.ZenDeskLabel = "permissions-permissions-updated";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                Permissions updated
            </h1>
            <div class="govuk-panel__body">
                You've successfully updated permissions for <br /><strong>@Model.AccountProviderLegalEntity.ProviderName</strong>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="govuk-form-group @(Html.IsValid(m => m.Choice) ? "" : " govuk-form-group--error")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m govuk-!-margin-bottom-0">
                        <h1 class="govuk-fieldset__heading">
                            What's next?
                        </h1>
                    </legend>
                    <span class="govuk-error-message">
                        @Html.ValidationMessageFor(m => m.Choice)
                    </span>
                    <div class="govuk-radios">
                        @if (Model.AccountLegalEntitiesCount > 1)
                        {
                            <div class="govuk-radios__item">
                                @Html.RadioButtonFor(m => m.Choice, "SetPermissions", new { id = "choice-1", @class = "govuk-radios__input" })
                                <label class="govuk-label govuk-radios__label" for="choice-1">
                                    Set permissions for another organisation
                                </label>
                            </div>
                        }
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(m => m.Choice, "AddTrainingProvider", new { id = "choice-2", @class = "govuk-radios__input" })
                            <label class="govuk-label govuk-radios__label" for="choice-2">
                                Add another training provider
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            @Html.RadioButtonFor(m => m.Choice, "GoToHomepage", new { id = "choice-3", @class = "govuk-radios__input" })
                            <label class="govuk-label govuk-radios__label" for="choice-3">
                                Go to the Homepage
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" type="submit">Continue</button>
        }  
    </div>
</div>