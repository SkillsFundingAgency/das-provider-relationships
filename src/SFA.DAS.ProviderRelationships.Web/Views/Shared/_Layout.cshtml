@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IEmployerUrlsConfiguration EmployerUrlsConfiguration
@inject IProviderRelationshipsConfiguration ProviderRelationshipsConfiguration
@inject IOidcConfiguration OidcConfiguration

<!doctype html>

<html class="govuk-template" lang="en">

<head>

    <meta charset="utf-8" />

    <title>@ViewBag.Title - Provider relationships</title>

    <meta name="theme-color" content="#0b0c0c" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:image" content="assets/images/govuk-opengraph-image.png">

    <link rel="shortcut icon" href="assets/images/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="assets/images/govuk-mask-icon.svg" color="#0b0c0c"/>
    <link rel="apple-touch-icon" sizes="180x180" href="assets/images/govuk-apple-touch-icon-180x180.png"/>
    <link rel="apple-touch-icon" sizes="167x167" href="assets/images/govuk-apple-touch-icon-167x167.png"/>
    <link rel="apple-touch-icon" sizes="152x152" href="assets/images/govuk-apple-touch-icon-152x152.png"/>
    <link rel="apple-touch-icon" href="assets/images/govuk-apple-touch-icon.png"/>
    <link href="css/main.css" rel="stylesheet" />

    <partial name="_ZenDeskWidget" />
    <partial name="_GoogleAnalyticsHead" />

</head>

<body class="govuk-template__body">

    <partial name="_GoogleAnalyticsBody" />

    <script>
        document.body.className = (document.body.className ? document.body.className + ' js-enabled' : 'js-enabled');
    </script>

    <a class="govuk-skip-link" href="#main-content">Skip to main content</a>

    <partial name="_CookieBanner" model="@Html.GetCookieBannerViewModel(EmployerUrlsConfiguration)" />
    <partial name="_Header" model="@Html.GetHeaderViewModel(EmployerUrlsConfiguration, OidcConfiguration)" />

    <div class="govuk-width-container">
        @await RenderSectionAsync("breadcrumb", false)
        <main class="govuk-main-wrapper " id="main-content" role="main">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer" model="@Html.GetFooterViewModel(EmployerUrlsConfiguration)" />
    <partial name="_GoogleAnalyticsInfo" />

    <script src="/libs/accessible-autocomplete/accessible-autocomplete.min.js"></script>
    <script src="/libs/jquery/jquery.min.js"></script>
    <script src="/libs/govuk-frontend/all.js"></script>
    <script src="/js/das-all.min.js"></script>
    <script src="/js/app.min.js"></script>

    <script>
        window.GOVUKFrontend.initAll();
        window.DASFrontend.initAll();
    </script>

    <script>

        var idSelectField = 'Ukprn';

        var selectEl = document.querySelector('#' + idSelectField);
        if (selectEl) {
            accessibleAutocomplete.enhanceSelectElement({
                selectElement: selectEl,
                minLength: 3,
                autoselect: true,
                defaultValue: '',
                displayMenu: 'overlay',
                placeholder: '',
                onConfirm: function (opt) {
                    var txtInput = document.querySelector('#' + idSelectField);
                    var searchString = opt || txtInput.value;
                    var requestedOption = [].filter.call(this.selectElement.options,
                        function (option) {
                            return (option.textContent || option.innerText) === searchString
                        }
                    )[0];
                    if (requestedOption) {
                        requestedOption.selected = true;
                    } else {
                        this.selectElement.selectedIndex = 0;
                    }
                }

            });
        }

    </script>

    @await RenderSectionAsync("footerJS", required: false)

</body>
</html>